root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = 120
tab_width = 4
trim_trailing_whitespace = true
quote_type = single

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.{jsx,js,tsx,ts,es6}]
indent_size = 2
tab_width = 2
